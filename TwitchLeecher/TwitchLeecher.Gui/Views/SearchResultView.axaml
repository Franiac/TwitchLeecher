<UserControl x:Class="TwitchLeecher.Old.Gui.Old.Views.SearchResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrl="clr-namespace:TwitchLeecher.Old.Gui.Old.Controls"
             xmlns:converters="clr-namespace:TwitchLeecher.Old.Gui.Old.Converters"
             xmlns:fa6="http://schemas.fontawesome.com/icons/svg"
             Style="{DynamicResource thisStyle}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <converters:InverseBooleanConverter x:Key="InverseBoolConverter" />
                    <BooleanToVisibilityConverter x:Key="BVConverter" />

                    <DataTemplate x:Key="emptyView">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="No videos found!" HorizontalAlignment="Center" FontSize="24"
                                       FontWeight="Bold" />
                            <fa6:ImageAwesome Icon="Solid_Video" Margin="0,20,0,20" Width="150" Height="150"
                                             Opacity="0.5">
                                <fa6:ImageAwesome.PrimaryColor>
                                    <SolidColorBrush Color="{DynamicResource Global.Theme.Color}" />
                                </fa6:ImageAwesome.PrimaryColor>
                            </fa6:ImageAwesome>
                        </StackPanel>
                    </DataTemplate>

                    <Style x:Key="thisStyle" TargetType="{x:Type UserControl}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path='Videos.Count'}" Value="0">
                                <Setter Property="ContentTemplate" Value="{StaticResource emptyView}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer x:Name="scroller" VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding Videos, UpdateSourceTrigger=PropertyChanged}" Grid.IsSharedSizeScope="True">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <ctrl:TlSpacedUniformGrid Margin="20" Spacing="10" IsItemsHost="True" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" BorderThickness="1" CornerRadius="5">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="{DynamicResource Window.Background.Gradient.Top.Color}" Offset="0" />
                                <GradientStop Color="{DynamicResource Window.Background.Gradient.Bottom.Color}"
                                              Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <DockPanel>
                            <Grid DockPanel.Dock="Bottom" Margin="0,5,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Grid Name="txtGrid" Grid.Column="0" Margin="0,0,5,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="{Binding Title}" TextTrimming="CharacterEllipsis" />
                                    <TextBlock Grid.Row="1" Margin="0,3,0,0" Opacity=".75" FontSize="12"
                                               Text="{Binding RecordedDate, StringFormat='D'}" />
                                </Grid>

                                <Button Grid.Column="1"
                                        IsEnabled="{Binding Live, Converter={StaticResource InverseBoolConverter}}"
                                        Padding="8" Width="40"
                                        Height="{Binding ActualHeight, ElementName=txtGrid, Mode=OneWay}"
                                        Command="{Binding Path=DataContext.DownloadCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                        CommandParameter="{Binding Id}">
                                    <fa6:ImageAwesome Icon="Solid_Download" RenderTransformOrigin="0.5,0.5" />
                                </Button>
                            </Grid>
                            <Grid Cursor="Hand">
                                <Grid.InputBindings>
                                    <MouseBinding Gesture="LeftClick"
                                                  Command="{Binding Path=DataContext.ViewCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                                  CommandParameter="{Binding Id}" />
                                </Grid.InputBindings>
                                <Canvas MinWidth="280" MinHeight="158" x:Name="canvas">
                                    <Image Source="{Binding Thumbnail}"
                                           Width="{Binding ElementName=canvas, Path=ActualWidth}"
                                           Height="{Binding ElementName=canvas, Path=ActualHeight}" Stretch="Fill" />
                                </Canvas>
                                <Border Visibility="{Binding Live, Converter={StaticResource BVConverter}}"
                                        Background="#FFEB0400" HorizontalAlignment="Left" VerticalAlignment="Top"
                                        CornerRadius="3" Margin="3,3,0,0" Padding="5,0,5,1">
                                    <StackPanel Orientation="Horizontal">
                                        <fa6:ImageAwesome Icon="Solid_Play" Width="10" Height="10" VerticalAlignment="Center">
                                            <fa6:ImageAwesome.PrimaryColor>
                                                <SolidColorBrush Color="{DynamicResource Text.Foreground.Light.Color}" />
                                            </fa6:ImageAwesome.PrimaryColor>
                                        </fa6:ImageAwesome>
                                        <TextBlock Text="LIVE" FontSize="12" Margin="4,0,0,0"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </Border>
                                <Border Visibility="{Binding Muted, Converter={StaticResource BVConverter}}"
                                        Background="#78000000" HorizontalAlignment="Right" VerticalAlignment="Top"
                                        CornerRadius="3" Margin="0,3,3,0" Padding="5,0,5,1">
                                    <StackPanel Orientation="Horizontal">
                                        <fa6:ImageAwesome Icon="Solid_MicrophoneSlash" Width="10" Height="10"
                                                         VerticalAlignment="Center">
                                            <fa6:ImageAwesome.PrimaryColor>
                                                <SolidColorBrush Color="{DynamicResource Text.Foreground.Light.Color}" />
                                            </fa6:ImageAwesome.PrimaryColor>
                                        </fa6:ImageAwesome>
                                        <TextBlock Text="Muted Parts" FontSize="12" Margin="4,0,0,0"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </Border>
                                <Border Background="#78000000" HorizontalAlignment="Left" VerticalAlignment="Bottom"
                                        CornerRadius="3" Margin="3,0,0,3" Padding="5,0,5,1">
                                    <StackPanel Orientation="Horizontal">
                                        <fa6:ImageAwesome Icon="Solid_Eye" Width="10" Height="10" VerticalAlignment="Center">
                                            <fa6:ImageAwesome.Foreground>
                                                <SolidColorBrush Color="{DynamicResource Text.Foreground.Light.Color}" />
                                            </fa6:ImageAwesome.Foreground>
                                        </fa6:ImageAwesome>
                                        <TextBlock Text="{Binding Views}" FontSize="12" Margin="4,0,0,0"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </Border>
                                <Border Background="#78000000" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                        CornerRadius="3" Margin="0,0,3,3" Padding="5,0,5,1">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding LengthStr}" FontSize="12" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </DockPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>