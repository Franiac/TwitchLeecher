<UserControl x:Class="TwitchLeecher.Old.Gui.Old.Views.LoadingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:fa6="http://schemas.fontawesome.com/icons/svg">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <fa6:ImageAwesome Style="{StaticResource Img_Spinner}" Opacity="0.5" Width="150" />
        <TextBlock Text="Loading..." HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.5">
            <TextBlock.Foreground>
                <SolidColorBrush Color="{DynamicResource Global.Theme.Color}" />
            </TextBlock.Foreground>
        </TextBlock>
    </Grid>
</UserControl>