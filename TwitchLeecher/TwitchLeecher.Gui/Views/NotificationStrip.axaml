<UserControl x:Class="TwitchLeecher.Old.Gui.Old.Views.NotificationStrip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <Storyboard x:Key="NotificationStoryboard">
                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" From="0" To="1" Duration="0:0:0.5" />
                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" From="1" To="0" Duration="0:0:0.5" BeginTime="0:0:3" />
                    </Storyboard>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <UserControl.RenderTransform>
        <ScaleTransform ScaleY="0" />
    </UserControl.RenderTransform>
    <TextBlock Name="txtNotification" Text="Test" HorizontalAlignment="Center" Padding="0,10" FontWeight="Bold">
        <TextBlock.Foreground>
            <SolidColorBrush Color="{DynamicResource Text.Foreground.Dark.Color}" />
        </TextBlock.Foreground>
    </TextBlock>
</UserControl>