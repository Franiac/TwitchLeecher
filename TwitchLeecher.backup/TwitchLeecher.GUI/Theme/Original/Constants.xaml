<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Sizes -->
    <sys:Double x:Key="Global.Font.Size">14</sys:Double>
    <sys:Double x:Key="Global.Font.Emphasize.Size">18</sys:Double>
    <!-- /sizes -->

    <!-- Colors -->
    <Color x:Key="Global.Theme.Color">#FFFFC864</Color>
    <Color x:Key="Global.Theme.Border.Color">#FF787878</Color>

    <Color x:Key="Window.Background.Color">#FF4B4B4B</Color>
    <Color x:Key="Window.Background.Gradient.Top.Color">#FF2E2E2E</Color>
    <Color x:Key="Window.Background.Gradient.Bottom.Color">#FF5B5B5B</Color>

    <Color x:Key="Text.Foreground.Light.Color">#FFFFFFFF</Color>
    <Color x:Key="Text.Foreground.Light.Disabled.Color">#FF757575</Color>
    <Color x:Key="Text.Foreground.Dark.Color">#FF000000</Color>
    <Color x:Key="Text.Foreground.Dark.Disabled.Color">#FF757575</Color>
    <Color x:Key="Text.Foreground.Watermark.Color">#FFCCCCCC</Color>
    <Color x:Key="Text.Foreground.Error.Color">#FFD20000</Color>

    <Color x:Key="Hyperlink.Foreground.Color">#FF2994FF</Color>

    <Color x:Key="TextControl.Background.Color">#FFFFFFFF</Color>
    <Color x:Key="TextControl.Background.Disabled.Color">#FFE6E6E6</Color>
    <Color x:Key="TextControl.Background.MouseOver.Color">#FFF3F9FF</Color>
    <Color x:Key="TextControl.Background.Pressed.Color">#FFD9ECFF</Color>
    <Color x:Key="TextControl.Background.Focus.Color">#FFFFF8ED</Color>
    <Color x:Key="TextControl.Background.Error.Color">#FFFF8080</Color>
    <Color x:Key="TextControl.Border.Color">#FFABADB3</Color>
    <Color x:Key="TextControl.Border.Disabled.Color">#FFBCBCBC</Color>
    <Color x:Key="TextControl.Border.MouseOver.Color">#FFFFDB9A</Color>
    <Color x:Key="TextControl.Border.Pressed.Color">#FFBF4C</Color>
    <Color x:Key="TextControl.Border.Focus.Color">#FFFFC864</Color>

    <Color x:Key="Button.Background.Disabled.Color">#FFE6E6E6</Color>
    <Color x:Key="Button.Background.MouseOver.Color">#FFFFE1AA</Color>
    <Color x:Key="Button.Background.Pressed.Color">#FFFFFFFF</Color>
    <Color x:Key="Button.FocusVisual.Border.Color">#FF000000</Color>

    <Color x:Key="TextBox.Background.Inactive.Selected.Color">#FFF0F0F0</Color>

    <Color x:Key="Scrollbar.Background.MouseOver.Color">#FFFFE1AA</Color>
    <Color x:Key="Scrollbar.Background.Pressed.Color">#FFFFE1AA</Color>

    <Color x:Key="ToolTip.Border.Color">#FF000000</Color>

    <Color x:Key="ProgressBar.Progress.Color">#FF06B025</Color>
    <Color x:Key="ProgressBar.Background.Color">#FFE6E6E6</Color>
    <!-- /Colors -->
</ResourceDictionary>